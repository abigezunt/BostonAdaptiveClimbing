<p id="notice"><%= notice %></p>

<h3>
  <%= @user.type_of_participant %> profile:
</h3>

<p>
  <strong>Name:</strong>
  <%= @user.first_name %> <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @user.phone %>
</p>

<p>
  <strong>Age:</strong>
  <%= @user.age %>
</p>

<% if @user.type_of_participant == "climber" %>

<p>
  <strong>Disabilities:</strong>
  <%= @user.disabilities %>
</p>

<% elsif @user.type_of_participant == "volunteer" %>
<p>
  <strong>Volunteer info:</strong>
  <%= @user.volunteer_info %>
</p>

<% end %>

<p>
  <strong>Bkbs membership status:</strong>
  <%= @user.bkbs_member %>
</p>

<p>
  <strong>Belay certified?</strong>
  <%= @user.belay_certified %>
</p>

<p>
  <strong>Emergency contact name:</strong>
  <%= @user.emergency_contact_name %>
</p>

<p>
  <strong>Emergency contact phone:</strong>
  <%= @user.emergency_contact_phone %>
</p>

<p>
  <strong>Has climbing shoes:</strong>
  <%= @user.has_shoes %>
</p>

<p>
  <strong>Has climbing harness:</strong>
  <%= @user.has_harness %>
</p>

<%= link_to 'Edit profile', edit_user_path(@user) %>
